---
import IconsHerf from "./IconsHref.astro";
import Saludar from "./Saludar.jsx";
import { ShieldAlt } from "../icons/AllIcons";
---

<nav class="flex-1 max-w-7xl mx-auto p-4">
  <div
    class="ontainer flex-col flex items-center list-none justify-between md:flex-row"
  >
    <IconsHerf href="/">
      <ShieldAlt className="w-12 h-12 text-white " />
      <div
        class="flex flex-col leading-tight text-center [@media(min-width:448px)]:text-left flex-wrap"
      >
        <span class="text-2xl text-white font-bold">
          Portal de denuncias anonimas
        </span>
        <span class="text-md text-gray-200"
          >Fiscalía General de la República</span
        >
      </div>
    </IconsHerf>
    <Saludar client:load />
  </div>
</nav>
