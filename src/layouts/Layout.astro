---
import Nav from "@/components/organisms/Nav.astro";
import Footer from "@/components/atoms/Footer.astro";
import "@/styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- SEO General -->
    <title>Denuncias Anónimas FGR El Salvador | Plataforma Segura</title>
    <meta
      name="description"
      content="Enviar denuncias anónimas a la FGR de El Salvador. altos estándares de privacidad digital. Realiza tu denuncia ciudadana en línea, sin revelar tus datos, de forma rápida, confiable y confidencial."
    />
    <meta
      name="keywords"
      content="sistema de denuncia,denuncias FGR El Salvador, denuncia ciudadana El Salvador en línea, denuncias anónimas, protección de identidad, cifrado GPG, PKI, seguridad digital, privacidad, plataforma segura, denuncias online, denuncias Fiscalía, enviar denuncia El Salvador, denuncia sin revelar identidad, denuncia digital, confidencialidad, denuncia segura"
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://denuncia-token.vercel.app/" />

    <!-- Open Graph (Facebook, LinkedIn) -->
    <meta
      property="og:title"
      content="Denuncias Seguras y Anónimas en El Salvador | FGR en Línea"
    />
    <meta
      property="og:description"
      content="Envía denuncias anónimas de forma segura y privada con protección de datos avanzada."
    />
    <meta
      property="og:image"
      content="https://denuncia-token.vercel.app/og_image.png"
    />
    <meta property="og:url" content="https://denuncia-token.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_SV" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Denuncias FGR El Salvador | Envío Anónimo y Seguro"
    />
    <meta
      name="twitter:description"
      content="Reporta delitos en El Salvador de forma anónima y protegida. Usamos GPG y PKI para tu seguridad."
    />
    <meta
      name="twitter:image"
      content="https://denuncia-token.vercel.app/og_image.png"
    />

    <!-- Autor (opcional) -->
    <meta name="author" content="Nombre del desarrollador o institución" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Plataforma de Denuncias FGR SV | Seguridad y Confidencialidad</title>
  </head>
  <body class="flex flex-col bg-[#f8fafc]">
    <header
      class="bg-gradient-to-r from-[#1e293b] via-[#2a3b5d] to-[#0c3b87]
      p-6 flex items-center"
    >
      <Nav />
    </header>
    <main
      class="container mx-auto p-2 md:p-10 lg:p-20 flex-grow mt-8 mb-8 sm:mt-0 sm:mb-0"
    >
      <slot />
    </main>
    <footer
      class="bg-gradient-to-r from-[#0c3b87] via-[#1e293b] to-[#2a3b5d] text-white py-6 px-20"
    >
      <Footer />
    </footer>
  </body>
</html>

<style>
  body {
    font-family: "Montserrat", sans-serif;
    background-color: #f8fafc;
  }
</style>
<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    line-height: 1.6;
  }
  @font-face {
    font-family: "Montserrat";
    src: url(/fonts/Montserrat-Regular.ttf) format("truetype");
    font-weight: 400;
    font-display: swap;
    font-style: normal;
  }
  @font-face {
    font-family: "Montserrat";
    src: url(/fonts/Montserrat-Medium.ttf) format("truetype");
    font-weight: 500;
    font-display: swap;
    font-style: normal;
  }
  @font-face {
    font-family: "Montserrat";
    src: url(/fonts/Montserrat-SemiBold.ttf) format("truetype");
    font-weight: 600;
    font-display: swap;
    font-style: normal;
  }
  @font-face {
    font-family: "Montserrat";
    src: url(/fonts/Montserrat-Bold.ttf) format("truetype");
    font-weight: 700;
    font-display: swap;
    font-style: normal;
  }
</style>
