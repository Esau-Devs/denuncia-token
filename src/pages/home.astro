---
// src/pages/Home.astro
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/organisms/Nav.astro";
import FormStep from "@/components/moleculas/FormStep";
import Footer from "@/components/atoms/Footer.astro";
import "@/styles/global.css";
import { BentoOne } from "@/components/organisms/BentoOne";
---

<Layout title="Inicio">
    <div>
        <header
            class="bg-gradient-to-r from-[#1e293b] via-[#2a3b5d] to-[#0c3b87]
    md:p-4 xl:p-6 flex items-center"
        >
            <Nav />
        </header>

        <main
            class="lg:container mx-auto p-2 md:p-10 lg:p-20 flex-grow mt-8 mb-8 sm:mt-0 sm:mb-0"
        >
            <section class="relative overflow-hidden bg-card">
                <div class="container mx-auto px-4 py-24 md:py-32">
                    <div class="mx-auto max-w-4xl text-center">
                        <h1
                            class="mb-6 text-balance font-serif text-5xl font-bold leading-tight tracking-tight text-foreground md:text-7xl lg:text-8xl"
                        >
                            Sistema oficial de denuncias ciudadanas
                        </h1>

                        <p
                            class="mb-12 mx-auto max-w-2xl text-pretty text-lg leading-relaxed text-muted-foreground md:text-xl"
                        >
                            Plataforma segura y confidencial para presentar
                            denuncias, dar seguimiento a casos y acceder a
                            recursos legales. Su voz importa.
                        </p>

                        <div
                            class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-center"
                        >
                            <a
                                href="#enviardenuncia"
                                class="flex items-center justify-center h-14 px-10 text-base font-semibold bg-[#0c3b87] text-white rounded-lg hover:bg-[#0c3b87a8] transition"
                            >
                                Presentar Denuncia
                            </a>
                        </div>

                        <div
                            class="mt-12 flex flex-wrap items-center justify-center gap-8 text-sm text-muted-foreground"
                        >
                            <div class="flex items-center gap-2">
                                <span
                                    class="w-2 h-2 bg-green-500 rounded-full mr-1 animate-pulse"
                                ></span>
                                <span>100% Confidencial</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span
                                    class="w-2 h-2 bg-green-500 rounded-full mr-1 animate-pulse"
                                ></span>
                                <span>Encriptación de extremo a extremo</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span
                                    class="w-2 h-2 bg-green-500 rounded-full mr-1 animate-pulse"
                                ></span>
                                <span>Respaldo legal gratuito</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-6 m-4">
                <!-- Bento 1 - Perfil de Usuario -->
                <BentoOne client:load />

                <!-- Bento 2 - Portal Principal -->
                <div
                    class="md:col-span-2 md:row-span-2 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6 md:p-10 shadow-lg"
                >
                    <section class="container mx-auto" id="enviardenuncia">
                        <div class="mb-8 text-center">
                            <div
                                class="bg-gradient-to-r from-[#2a3b5d] via-[#1e56a0] to-[#0c3b87] rounded-xl text-white shadow-2xl overflow-hidden"
                            >
                                <div class="p-8">
                                    <div
                                        class="flex flex-col items-center justify-center"
                                    >
                                        <svg
                                            class="w-16 h-16 mb-4 text-white opacity-90"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                                            ></path>
                                        </svg>
                                        <h3
                                            class="text-2xl md:text-3xl font-bold mb-3"
                                        >
                                            Tu Voz Impulsa el Cambio
                                        </h3>
                                        <p
                                            class="text-sm md:text-base text-white/90 max-w-2xl"
                                        >
                                            Cada reporte contribuye a construir
                                            una comunidad más segura, justa y
                                            transparente para todos.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div
                                class="mt-6 flex items-center justify-center gap-2 text-gray-600 text-sm bg-blue-50 p-4 rounded-lg border border-blue-100"
                            >
                                <svg
                                    class="w-5 h-5 text-blue-600 flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                                <p>
                                    Todas tus denuncias quedan registradas de
                                    forma segura. Accede al historial completo y
                                    revisa el progreso de cada caso en detalle.
                                </p>
                            </div>
                        </div>

                        <div class="w-full grid gap-6">
                            <FormStep client:load />
                        </div>
                    </section>
                </div>

                <!-- Bento 3 - Seguridad -->
                <div
                    class="col-span-2 bg-white border border-gray-200 shadow-lg rounded-xl p-6 md:p-8"
                >
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class="p-3 rounded-xl bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87]"
                        >
                            <svg
                                class="h-6 w-6 text-white"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">
                                Seguridad de Extremo a Extremo
                            </h3>
                            <p class="text-sm text-gray-600">
                                Tu información está protegida con los más altos
                                estándares de seguridad
                            </p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div
                            class="p-4 rounded-xl bg-[#f8f9fa] border border-gray-200"
                        >
                            <div class="flex items-start gap-3">
                                <div
                                    class="p-2 rounded-lg bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] shrink-0"
                                >
                                    <svg
                                        class="h-5 w-5 text-white"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4
                                        class="text-sm font-semibold text-gray-900 mb-1 flex items-center gap-2"
                                    >
                                        Cifrado de Extremo a Extremo
                                        <svg
                                            class="h-4 w-4 text-green-600"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </h4>
                                    <p class="text-xs text-gray-700">
                                        Todos los datos están cifrados con
                                        AES-256
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div
                            class="p-4 rounded-xl bg-[#f8f9fa] border border-gray-200"
                        >
                            <div class="flex items-start gap-3">
                                <div
                                    class="p-2 rounded-lg bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] shrink-0"
                                >
                                    <svg
                                        class="h-5 w-5 text-white"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4
                                        class="text-sm font-semibold text-gray-900 mb-1 flex items-center gap-2"
                                    >
                                        Autenticación Segura
                                        <svg
                                            class="h-4 w-4 text-green-600"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </h4>
                                    <p class="text-xs text-gray-700">
                                        Autenticación de dos factores (2FA)
                                        disponible
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div
                            class="p-4 rounded-xl bg-[#f8f9fa] border border-gray-200"
                        >
                            <div class="flex items-start gap-3">
                                <div
                                    class="p-2 rounded-lg bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] shrink-0"
                                >
                                    <svg
                                        class="h-5 w-5 text-white"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4
                                        class="text-sm font-semibold text-gray-900 mb-1 flex items-center gap-2"
                                    >
                                        Almacenamiento Seguro
                                        <svg
                                            class="h-4 w-4 text-green-600"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </h4>
                                    <p class="text-xs text-gray-700">
                                        Datos almacenados en servidores
                                        certificados ISO 27001
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div
                            class="p-4 rounded-xl bg-[#f8f9fa] border border-gray-200"
                        >
                            <div class="flex items-start gap-3">
                                <div
                                    class="p-2 rounded-lg bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] shrink-0"
                                >
                                    <svg
                                        class="h-5 w-5 text-white"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4
                                        class="text-sm font-semibold text-gray-900 mb-1 flex items-center gap-2"
                                    >
                                        Protección de Privacidad
                                        <svg
                                            class="h-4 w-4 text-gray-600"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </h4>
                                    <p class="text-xs text-gray-700">
                                        Cumplimiento total con GDPR y normativas
                                        de privacidad
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div
                        class="mt-6 p-5 rounded-xl bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] shadow-lg"
                    >
                        <p class="text-sm text-white leading-relaxed">
                            <span class="font-bold">Garantía de Seguridad:</span
                            >
                            Todas las denuncias y datos personales son cifrados antes
                            de ser almacenados. Solo tú y los administradores autorizados
                            pueden acceder a tu información. Realizamos auditorías
                            de seguridad periódicas para garantizar la máxima protección.
                        </p>
                    </div>
                </div>

                <!-- Bento 4 - Mis Denuncias -->
                <div
                    class="col-span-2 lg:col-span-1 rounded-xl p-6 bg-white border border-gray-200 shadow-lg"
                >
                    <h3
                        class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2"
                    >
                        <svg
                            class="w-5 h-5 text-gray-700"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                            ></path>
                        </svg>
                        Mis Denuncias
                    </h3>

                    <div class="space-y-3">
                        <div
                            class="p-4 rounded-lg bg-[#e8f0fe] border-l-4 border-[#1a73e8] hover:shadow-md transition-shadow cursor-pointer"
                        >
                            <div
                                class="flex items-start justify-between gap-3 mb-2"
                            >
                                <h4
                                    class="text-sm font-semibold text-gray-900 flex-1"
                                >
                                    Ruido excesivo en horario nocturno
                                </h4>
                                <span
                                    class="inline-flex items-center bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] bg-clip-text text-transparent bg-[#e8f0fe] text-xs font-medium px-2 py-1 rounded-full whitespace-nowrap border border-[#0c3b87]"
                                >
                                    <span
                                        class="w-2 h-2 bg-[#1a73e8] rounded-full mr-1"
                                    ></span>
                                    Pendiente
                                </span>
                            </div>
                            <p class="text-xs text-gray-500">15 Oct 2024</p>
                        </div>

                        <div
                            class="p-4 rounded-lg bg-[#f8f9fa] border-l-4 border-gray-400 hover:shadow-md transition-shadow cursor-pointer"
                        >
                            <div
                                class="flex items-start justify-between gap-3 mb-2"
                            >
                                <h4
                                    class="text-sm font-semibold text-gray-900 flex-1"
                                >
                                    Iluminación defectuosa en escalera
                                </h4>
                                <span
                                    class="inline-flex items-center text-gray-600 bg-[#f8f9fa] text-xs font-medium px-2 py-1 rounded-full whitespace-nowrap border border-gray-400"
                                >
                                    <svg
                                        class="h-3 w-3 mr-1"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Resuelta
                                </span>
                            </div>
                            <p class="text-xs text-gray-500">12 Oct 2024</p>
                        </div>

                        <div
                            class="p-4 rounded-lg bg-[#e8f0fe] border-l-4 border-[#1a73e8] hover:shadow-md transition-shadow cursor-pointer"
                        >
                            <div
                                class="flex items-start justify-between gap-3 mb-2"
                            >
                                <h4
                                    class="text-sm font-semibold text-gray-900 flex-1"
                                >
                                    Fuga de agua en zona común
                                </h4>
                                <span
                                    class="inline-flex items-center bg-gradient-to-r from-[#2a3b5d] to-[#0c3b87] bg-clip-text text-transparent bg-[#e8f0fe] text-xs font-medium px-2 py-1 rounded-full whitespace-nowrap border border-[#0c3b87]"
                                >
                                    <span
                                        class="w-2 h-2 bg-[#1a73e8] rounded-full mr-1 animate-pulse"
                                    ></span>
                                    En Proceso
                                </span>
                            </div>
                            <p class="text-xs text-gray-500">08 Oct 2024</p>
                        </div>

                        <div
                            class="p-4 rounded-lg bg-[#f8f9fa] border-l-4 border-gray-400 hover:shadow-md transition-shadow cursor-pointer"
                        >
                            <div
                                class="flex items-start justify-between gap-3 mb-2"
                            >
                                <h4
                                    class="text-sm font-semibold text-gray-900 flex-1"
                                >
                                    Basura acumulada en contenedores
                                </h4>
                                <span
                                    class="inline-flex items-center text-gray-600 bg-[#f8f9fa] text-xs font-medium px-2 py-1 rounded-full whitespace-nowrap border border-gray-400"
                                >
                                    <svg
                                        class="h-3 w-3 mr-1"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Resuelta
                                </span>
                            </div>
                            <p class="text-xs text-gray-500">05 Oct 2024</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer
            class="bg-gradient-to-r from-[#0c3b87] via-[#1e293b] to-[#2a3b5d] text-white py-6 px-20"
        >
            <Footer />
        </footer>
    </div>
</Layout>
